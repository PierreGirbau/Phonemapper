<!-- Search bar -->
<%= render 'shared/banner' %>
<!-- No search, Display Best deals -->
<div class="container">
  <h1>Our best deals</h1>
  <div class="row" id="products">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-4">
            <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= product.picture %>);">
              <div class="card-description">
                  <%= link_to "#{product.brand.name} #{product.name} #{product.version}", product_path(product) %>
              </div>
            </div>
        </div>
      <% end %>
  </div> <!-- row -->
</div>
