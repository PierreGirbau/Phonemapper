<!-- No search, Display Best deals -->
<div class="container" id="ads">
  <h1 id="title"><i class="fa fa-thumbs-up"></i>The best deals around you</h1>
  <div class="row">
    <% @ads.each do |ad| %>
    <%= link_to ad_path(ad) do %>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <%  ad.pictures.first.nil? ? url = ad.product.picture : url = ad.pictures.first.url  %>
      <%= link_to "#", "data-toggle" => "modal", "data-target" => "#myModal#{ad.id}" do %>

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url(<%= url %>);">
        <div class="card-price">
          <%= ad.price %> â‚¬
        </div>
        <div class="card-content">
          <h2 class="card-title"><%= ad.title %></h2>
          <div class="card-time">
