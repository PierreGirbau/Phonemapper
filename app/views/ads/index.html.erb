<div class="main-container">
  <div class="sidebar">
    <h3>Your search</h3>
    <hr>

    <%= form_tag ads_path, method: :get do %>
    <p>Filter by price</p>
    <input name="price" type="range" min="0" max="1000" step="10" value="<%= params[:price] %>" data-orientation="vertical" id="price"/>
    <%= params[:price] %>
    <p>Filter by capacity</p>
      <%= hidden_field_tag :query, params[:query], class: "form-control" %>
      <%= text_field_tag :capacity, params[:capacity], class: "form form-control", placeholder: "32Go? 128Go? 256Go?" %>
      <%= submit_tag "Filter", class: "btn btn-success" %>
    <% end %>

  </div>
  <div id="ads">
    <h1><%= @ads.size %> results found</h1>

    <div class="clearfix">
      <% @ads.each do |ad| %>
      <div class="col-xs-12 col-sm-6">
        <!-- Button trigger modal -->
        <%= link_to "#", "data-toggle" => "modal", "data-target" => "#myModal#{ad.id}" do %>

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url(<%= Picture.where(ad: ad).first&.url.nil? ? ad.product.picture : Picture.where(ad: ad).first.url %>);">
            <div class="card-price">
              <%= ad.price %> â‚¬
            </div>
          <div class="card-content">
            <h2 class="card-title"><%= ad.title %></h2>
              <!-- <div class="card-time">
               <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48"> <g class="nc-icon-wrapper" fill="#ffffff"> <path d="M37.84 12.02C37.43 10.84 36.31 10 35 10H13c-1.31 0-2.43.84-2.84 2.02L6 24v16c0 1.1.9 2 2 2h2c1.11 0 2-.9 2-2v-2h24v2c0 1.1.9 2 2 2h2c1.11 0 2-.9 2-2V24l-4.16-11.98zM13 32c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm22 0c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zM10 22l3-9h22l3 9H10z"></path> </g> </svg>
            </div> -->
          </div>

        </div>
        <% end %>
      </div>
      <!-- Modal -->
      <%= render "shared/admodal", ad: ad %>
      <% end %>
    </div>
  </div>
  <div id="map" style="width: 80%; height: 700px; "data-markers= "<%= @markers.to_json %>"></div>
</div>

